<Window x:Class="PixelArts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelArts"
        mc:Ignorable="d"
        Title="Pixel Arts" Height="350" Width="525" WindowState="Maximized">
    <Menu x:Name="menu" Height="21" VerticalAlignment="Top">
        <MenuItem Header="_File">
            <MenuItem Header="New" HorizontalAlignment="Left" Width="140"/>
            <MenuItem Header="Load" HorizontalAlignment="Left" Width="140"/>
            <MenuItem Header="Save" HorizontalAlignment="Left" Width="140"/>
            <MenuItem Header="Save As" HorizontalAlignment="Left" Width="140"/>
            <MenuItem Header="Close" HorizontalAlignment="Left" Width="140"/>
        </MenuItem>
        <MenuItem Header="_Edit"/>
    </Menu>
</Window>
